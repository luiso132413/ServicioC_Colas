<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.geometry.Insets?>
<VBox xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.proyecto.controllador.TicketController"
      spacing="10" alignment="CENTER"
      styleClass="root" prefWidth="400" prefHeight="500">
   <padding>
      <Insets top="10" right="10" bottom="10" left="10"/>
   </padding>

   <Label text="Atención de Tickets" styleClass="subtitle-label"/>

   <TextArea fx:id="txtTicket" editable="false" wrapText="true" prefHeight="350"/>

   <HBox spacing="5" alignment="CENTER">
      <Button text="Atender Siguiente Ticket" onAction="#obtenerProximoTicket"/>
      <Button text="Finalizar Operación" onAction="#finalizarOperacion"/>
   </HBox>
</VBox>